{
	"expo": {
		"name": "WeatherApp",
		"slug": "WeatherApp",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "weatherapp",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"platforms": ["ios", "android", "web"],
		"ios": {
			"supportsTablet": true,
			"infoPlist": {
				"NSLocationAlwaysAndWhenInUseUsageDescription": "Allow WeatherApp to use your location.",
				"NSLocationAlwaysUsageDescription": "Allow WeatherApp to use your location in the background.",
				"NSLocationWhenInUseUsageDescription": "Allow WeatherApp to use your location when the app is open."
			},
			"bundleIdentifier": "com.anonymous.WeatherApp"
		},
		"android": {
			"adaptiveIcon": {
				"backgroundColor": "#E6F4FE",
				"foregroundImage": "./assets/images/android-icon-foreground.png",
				"backgroundImage": "./assets/images/android-icon-background.png",
				"monochromeImage": "./assets/images/android-icon-monochrome.png"
			},
			"edgeToEdgeEnabled": true,
			"predictiveBackGestureEnabled": false,

			"package": "com.anonymous.WeatherApp"
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/splash-icon.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#ffffff",
					"dark": {
						"backgroundColor": "#000000"
					}
				}
			],
			[
				"expo-camera",
				{
					"cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
					"microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
					"recordAudioAndroid": true
				}
			],
			[
				"expo-location",
				{
					"locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location.",
					"locationAlwaysPermission": "Allow $(PRODUCT_NAME) to use your location in the background.",
					"locationWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location when the app is open.",
					"isIosBackgroundLocationEnabled": true
				}
			],
			"expo-secure-store",
			"expo-sqlite"
		],
		"experiments": {
			"typedRoutes": true,
			"reactCompiler": true
		},
		"assetBundlePatterns": ["**/*"]
	}
}
